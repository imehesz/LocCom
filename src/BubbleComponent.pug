script.
    // BubbleComponent.pug
    let text = "BLAH ajd askdh ajksh kdjhaksj  hkjh kjh "

section.bubble-component
    #speech-bubble
        #bub-part-a 
        #bub-part-b 
        #bub-part-c 
        #speech-txt {text}
        #bub-part-c 
        #bub-part-b 
        #bub-part-a

        #speech-arrow 
            #arrow-w 
            #arrow-x 
            #arrow-y 
            #arrow-z

style.
    #speech-bubble {
        max-width:95%;
        margin: 0 auto;
    }

    #bub-part-a {
        margin-left:6px;
        width:calc(100% - 12px);
        height:var(--bubbleSize);
        background:var(--Speech-Bubble-Border);
    }

    #bub-part-b {
        margin-left:4px;
        width:calc(100% - 12px);
        height:var(--bubbleSize);
        background:var(--Speech-Bubble-Background);
        border-left:var(--bubbleSize) solid var(--Speech-Bubble-Border);
        border-right:var(--bubbleSize) solid var(--Speech-Bubble-Border);
    }

    #bub-part-c {
        margin-left:2px;
        width:calc(100% - 8px);
        height:var(--bubbleSize);
        background:var(--Speech-Bubble-Background);
        border-left:var(--bubbleSize) solid var(--Speech-Bubble-Border);
        border-right:var(--bubbleSize) solid var(--Speech-Bubble-Border);
    }

    #speech-txt {
        width:calc(100% - 24px);
        padding:10px;
        font-family:"Press Start 2P", sans-serif;
        font-size:24px;
        color:var(--Speech-Bubble-Text);
        text-align:center;
        background:var(--Speech-Bubble-Background);
        border-left:var(--bubbleSize) solid var(--Speech-Bubble-Border);
        border-right:var(--bubbleSize) solid var(--Speech-Bubble-Border);
    }

    #speech-arrow {
        margin-top:-2px;
        margin-left:75%;
    }

    #arrow-w {
        width:8px;
        height:8px;
        background:var(--Speech-Bubble-Background);
        border-left:var(--bubbleSize) solid var(--Speech-Bubble-Border);
        border-right:var(--bubbleSize) solid var(--Speech-Bubble-Border);
    }

    #arrow-x {
        width:6px;
        height:var(--bubbleSize);
        background:var(--Speech-Bubble-Background);
        border-left:var(--bubbleSize) solid var(--Speech-Bubble-Border);
        border-right:var(--bubbleSize) solid var(--Speech-Bubble-Border);
    }

    #arrow-y {
        margin-left:-2px;
        width:6px;
        height:var(--bubbleSize);
        background:var(--Speech-Bubble-Background);
        border-left:var(--bubbleSize) solid var(--Speech-Bubble-Border);
        border-right:var(--bubbleSize) solid var(--Speech-Bubble-Border);
    }

    #arrow-z {
        margin-left:-2px;
        width:8px;
        height:var(--bubbleSize);
        background:var(--Speech-Bubble-Border);
    }

    @media screen and (min-width: 600px) {
        #speech-bubble {
            max-width:65%;
        }
    }